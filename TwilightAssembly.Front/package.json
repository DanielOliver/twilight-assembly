{
    "private": true,
    "scripts": {
        "prestart": "dotnet tool restore",
        "start": "cross-env NODE_OPTIONS=--openssl-legacy-provider dotnet fable watch ./src -s --run webpack-dev-server",
        "prebuild": "dotnet tool restore",
        "build": "dotnet fable ./src && cross-env NODE_OPTIONS=--openssl-legacy-provider webpack",
        "test:live": "dotnet fable watch tests --run webpack-dev-server --config ./webpack.tests.js",
        "build:test": "dotnet fable tests && webpack --config webpack.tests.js",
        "pretest": "dotnet tool restore && fable-splitter tests -o dist/tests --commonjs",
        "test": "mocha dist/tests"
    },
    "dependencies": {
        "bootstrap": "5.1.3",
        "react": "^17.0.1",
        "react-dom": "^17.0.1"
    },
    "devDependencies": {
        "@babel/core": "^7.12.10",
        "@babel/preset-env": "^7.12.11",
        "@babel/preset-react": "^7.12.10",
        "@babel/runtime": "^7.12.5",
        "@pmmmwh/react-refresh-webpack-plugin": "^0.4.3",
        "@types/react": "^18.0.9",
        "babel-loader": "^8.2.2",
        "copy-webpack-plugin": "^6.4.1",
        "core-js": "^3.8.2",
        "cross-env": "^7.0.3",
        "css-loader": "^5.0.1",
        "dotenv-webpack": "^6.0.0",
        "esm": "^3.2.25",
        "fable-compiler": "2.13.0",
        "fable-loader": "2.1.9",
        "fable-splitter": "^2.2.1",
        "file-loader": "^6.2.0",
        "graceful-fs": "^4.2.4",
        "html-webpack-plugin": "^4.5.1",
        "mini-css-extract-plugin": "^1.3.4",
        "mocha": "^8.2.1",
        "react-refresh": "^0.9.0",
        "sass": "^1.32.4",
        "sass-loader": "^10.1.1",
        "source-map-loader": "^2.0.1",
        "style-loader": "^2.0.0",
        "terser": "^4.8.0",
        "ts-loader": "^8.3.0",
        "typescript": "^4.6.4",
        "webpack": "^4.44.2",
        "webpack-cli": "^3.3.12",
        "webpack-dev-server": "^3.11.2"
    }
}
